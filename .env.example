# TradeSense AI - Environment Configuration
# Copy this file to .env and update values for your environment

# ===========================================
# APPLICATION SETTINGS
# ===========================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000
VERSION=1.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://tradesense:password123@localhost:5432/tradesense_db
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=20
DB_POOL_RECYCLE=3600
DB_MAX_OVERFLOW=20
SQL_DEBUG=False

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
CACHE_TIMEOUT=300

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_HOURS=1
JWT_REFRESH_DAYS=30

# ===========================================
# CORS SETTINGS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@tradesense.ai

# ===========================================
# CELERY BACKGROUND TASKS
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# ===========================================
# MARKET DATA APIS
# ===========================================
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
YAHOO_FINANCE_ENABLED=True
MARKET_DATA_CACHE_TTL=60

# ===========================================
# PAYMENT PROCESSING
# ===========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# RATE LIMITING
# ===========================================
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=200 per day, 50 per hour
RATELIMIT_HEADERS_ENABLED=True

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/tradesense.log

# ===========================================
# MONITORING & METRICS
# ===========================================
SENTRY_DSN=your-sentry-dsn-url
PROMETHEUS_METRICS=False

# ===========================================
# WEBSOCKET SETTINGS
# ===========================================
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25

# ===========================================
# SECURITY SETTINGS
# ===========================================
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False
PROXY_FIX=True

# ===========================================
# TRADING CONFIGURATION
# ===========================================
DEFAULT_LEVERAGE=1
MAX_LEVERAGE=30
DEFAULT_COMMISSION=0.0001
MIN_TRADE_AMOUNT=10
MAX_TRADE_AMOUNT=100000

# ===========================================
# RISK MANAGEMENT
# ===========================================
DEFAULT_MAX_DAILY_LOSS=0.05
DEFAULT_MAX_TOTAL_LOSS=0.10
RISK_ASSESSMENT_INTERVAL=3600

# ===========================================
# CHALLENGE SETTINGS
# ===========================================
MIN_CHALLENGE_DURATION=30
MAX_CHALLENGE_DURATION=365
MIN_CHALLENGE_AMOUNT=1000
MAX_CHALLENGE_AMOUNT=1000000
DEFAULT_PROFIT_SHARE=0.8

# ===========================================
# NOTIFICATIONS
# ===========================================
PUSH_NOTIFICATIONS_ENABLED=True
EMAIL_NOTIFICATIONS_ENABLED=True

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=True
BACKUP_INTERVAL=24
BACKUP_RETENTION=30

# ===========================================
# MAINTENANCE MODE
# ===========================================
MAINTENANCE_MODE=False
ADMIN_MAINTENANCE_TOKEN=your-admin-maintenance-token

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to True to enable development features
DEV_MODE=True
DEV_FIXTURES=True
DEV_MOCK_PAYMENTS=True
DEV_MOCK_MARKET_DATA=False
