# TradeSense AI Environment Configuration
# =======================================
# Copy this file to .env and fill in your actual values
# Never commit real secrets to version control

# Flask Application Settings
SECRET_KEY=your-super-secret-key-here-change-in-production
FLASK_ENV=production
FLASK_DEBUG=false

# Database Configuration (PostgreSQL)
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://tradesense_user:your_secure_postgres_password@postgres:5432/tradesense

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_secure_redis_password

# Server Configuration
PORT=8000
BACKEND_PORT=8000
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=30

# WebSocket Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
SOCKETIO_CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Worker Configuration
WORKER_TYPE=risk_monitor
WORKER_INTERVAL=60
WORKER_MAX_RUNTIME=24

# Risk Monitoring Thresholds
INACTIVE_THRESHOLD_MINUTES=30
HIGH_ACTIVITY_THRESHOLD=100

# External Service URLs (for production)
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_WS_URL=wss://api.yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Headers (for production proxy)
SECURE_HEADERS=true
HSTS_MAX_AGE=31536000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# Redis Connection Pool
REDIS_SOCKET_TIMEOUT=5.0
REDIS_SOCKET_CONNECT_TIMEOUT=5.0

# Rate Limiting (requests per minute)
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_PER_USER=100

# Session Configuration
SESSION_TYPE=redis
SESSION_REDIS_URL=redis://redis:6379/1
SESSION_LIFETIME=3600

# Email Configuration (for future features)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key
PROMETHEUS_ENABLED=true

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_WORKERS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# Deployment Environment
ENVIRONMENT=production
DEPLOYMENT_ID=2024-01-01-v1.0.0
REGION=us-east-1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS=30

# CDN Configuration (for static assets)
CDN_URL=https://cdn.yourdomain.com
CDN_ENABLED=true

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_FORCE=true

# Load Balancer Configuration
LB_HEALTH_CHECK_PATH=/health
LB_HEALTH_CHECK_INTERVAL=30

# Container Resource Limits
BACKEND_CPU_LIMIT=1.0
BACKEND_MEMORY_LIMIT=512m
WORKER_CPU_LIMIT=0.5
WORKER_MEMORY_LIMIT=256m
POSTGRES_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=256m