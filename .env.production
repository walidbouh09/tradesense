# Production Environment Configuration
# DO NOT commit this file with real secrets!

# Application
FLASK_ENV=production
FLASK_DEBUG=false
APP_ENV=production

# Database
DATABASE_URL=postgresql://tradesense_user:tradesense_pass@postgres:5432/tradesense

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production
JWT_SECRET_KEY=change-this-to-a-secure-random-jwt-key

# CORS
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# Payment Simulation
PAYMENT_SIMULATION_MODE=true
CMI_MERCHANT_ID=PROD_MERCHANT_001
CMI_SECRET_KEY=change-this-in-production

# Market Data
YFINANCE_ENABLED=true
CASABLANCA_SCRAPING_ENABLED=true
MARKET_DATA_CACHE_TTL=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Workers
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
